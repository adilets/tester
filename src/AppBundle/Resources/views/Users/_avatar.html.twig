<div class="card">
    <div class="card-image">
        <figure class="image is-4by4">
            <img src="{{ avatar(user, 400) }}" alt="Placeholder image">
        </figure>
    </div>
    <div class="card-content">
        <div class="media">
            <div class="media-content">
                <p class="title is-4">@{{ user.username }}</p>
            </div>
        </div>

        <div class="content">
            {{ 'user.last_login' | trans }}: <time>{{ user.lastLogin | localizeddate }}</time>
        </div>
    </div>
</div>